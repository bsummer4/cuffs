<$PLAN9/src/mkhdr

SDL = `{pkg-config --cflags sdl} -lSDL_image -lSDL_gfx -lSDL_mixer
LDFLAGS = -ltcl8.5 -lm $SDL
CFLAGS = --std=c99 -Wall -pedantic
CLEANFILES = sdl_wrap.c sdl.so
TARG = drawtest keytest

all:V: sdl.so
o.drawtest: draw.o vector2.o
o.keytest: keys.o

<$PLAN9/src/mkmany

test:V: all
	./o.keytest && ./sdltest.sh && ./o.drawtest

sdl_wrap.c: sdl.i draw.c draw.h
	swig -tcl sdl.i

sdl.so: tclloop.c keys.c draw.c sdl_wrap.c vector2.c
	gcc $prereq -shared $LDFLAGS $CFLAGS -o $target
